DEFINE NAMESPACE xlix;
USE NS xlix;
DEFINE DATABASE main;
USE DB main;

BEGIN TRANSACTION;

DEFINE TABLE system SCHEMAFULL;
DEFINE FIELD name ON TABLE system TYPE string;
DEFINE FIELD publicKey ON TABLE system TYPE option<string> DEFAULT NONE;
DEFINE INDEX iSystemName ON TABLE system FIELDS name UNIQUE;

DEFINE TABLE file SCHEMAFULL;
DEFINE FIELD size ON TABLE file TYPE int;
DEFINE FIELD packs ON TABLE file TYPE array DEFAULT [];

COMMIT TRANSACTION;